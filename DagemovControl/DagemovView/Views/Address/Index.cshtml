@model IEnumerable<DagemovView.Data.Entities.Country>;
@{
    ViewData["Title"] = "Country Index";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<h1>Countries</h1>
<p>
    <a asp-action="CreateCountry" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create New Country</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Countries</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StatesNumber)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatesNumber)
                                </td>
                                <td>
                                    <a asp-action="CountryEdit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square" style="color: #e7eb00;"></i> Edit</a>
                                    <a asp-action="CountryDetails" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-circle-info" style="color: #41a2ec;"></i> Details</a>
                                    <a asp-action="CountryDelete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-delete-left" style="color: #690202;"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                responsive: true,
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "All"]
                ]
            });
        });
    </script>
}