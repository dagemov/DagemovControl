@model DagemovView.Data.Entities.State

@{
    ViewData["Title"] = "State Details";
}


<h1>Details of @Model.Name</h1>

<div>
    <partial name="_StateDetails" />
</div>

<hr />


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Cities</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Citys.FirstOrDefault().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Citys.FirstOrDefault().StreetNumber)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Citys)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StreetNumber)
                                </td>
                                <td>
                                    <a asp-action="CityEdit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                                    <a asp-action="CityDetails" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                                    <a asp-action="CityDelete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div>
                <a asp-action="CreateCity" asp-route-id="@Model?.Id" class="btn btn-primary">Add City</a>
                <a asp-action="StateEdit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
                <a asp-action="StateDetails" class="btn btn-success mt">Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                responsive: true,
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "All"]
                ]
            });
        });
    </script>
}
